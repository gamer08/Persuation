<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/value"
                android:width="1dp"
                />
            <corners android:radius="7dp"/>

            <gradient
                android:startColor="#C8C8C8"
                android:endColor="#FFFFFF"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
</selector>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ppm.uqac.com.geekproject.start.WelcomeActivity"
    android:background="@color/background"
    android:weightSum="1"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/glasses_green" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEEP"
            android:id="@+id/tv_keep"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/value"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALM"
            android:id="@+id/tv_calm"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:textColor="@color/value"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AND"
            android:id="@+id/tv_and"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:textColor="@color/value"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLICK"
            android:id="@+id/tv_click"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:textColor="@color/value"
            android:textSize="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HERE"
            android:id="@+id/tv_here"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:textColor="@color/value"
            android:textSize="100dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:text="@string/BTN_WelcomeStart"
        android:id="@+id/button"
        android:onClick="StartQuestionary"
        android:src="@drawable/btn_start"
        android:textColor="@color/value"
        android:layout_weight="0.10"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:padding="50dp" />
</LinearLayout>

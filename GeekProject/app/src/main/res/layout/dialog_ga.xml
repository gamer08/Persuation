<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    style='"@android:style/Theme.Dialog"'>

    <TextView android:text="Ceci est un dialog test pour forcé l'utilisateur a voir ces activités"
        android:id="@+id/TV_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TV_FirstName"
        android:layout_toRightOf="@+id/buttonContent"
        android:layout_toEndOf="@+id/buttonContent"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <Button
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:text="Voir les activités"
        android:id="@+id/buttonActivites"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickActivites" />


</LinearLayout>

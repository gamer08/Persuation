<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/badge_layout"
    android:background="@color/background"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/badge_name"
        android:text="Nom"
        android:layout_alignRight="@+id/badge_image"
        android:layout_below="@id/badge_image"
        android:textColor="@color/value"
        android:textSize="25dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_weight="0.20"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/badge_image"
        android:src="@drawable/badge_newbie" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/badge_description"
        android:text="Description"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/badge_image"
        android:textColor="@color/label"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:layout_weight="0.33" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_got"
        android:enabled="false"
        android:layout_toRightOf="@id/badge_description"
        android:layout_centerVertical="true"
        android:textColor="@color/value"
        android:layout_gravity="center_vertical" />

</LinearLayout>





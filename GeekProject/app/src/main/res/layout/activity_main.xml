<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ppm.uqac.com.geekproject.MainActivity"
    android:background="@color/background">


    <TextView android:text="test"
        android:id="@+id/TV_FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"/>

    <TextView android:text="test"
        android:id="@+id/TV_LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_FirstName"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:layout_below="@id/TV_LastName"
        android:layout_centerHorizontal="true"
        android:paddingBottom="25dp"
        android:src="@drawable/antigeek"
        />


    <TextView android:text="test"
        android:id="@+id/TV_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"/>
        <!--android:layout_toRightOf="@+id/buttonContent"
        android:layout_toEndOf="@+id/buttonContent"-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ActivitÃ©s"
        android:id="@+id/buttonActivities"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickActivities"
        android:drawableLeft="@drawable/activityicon2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geeklopedie"
        android:id="@+id/buttonContent"
        android:onClick="onClickContent"
        android:layout_below="@+id/buttonActivities"
        android:layout_alignLeft="@+id/buttonActivities"
        android:drawableLeft="@drawable/geeklopedieicon2"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:id="@+id/buttonProfil"
        android:onClick="onClickProfile"
        android:layout_below="@+id/buttonContent"
        android:layout_alignLeft="@+id/buttonContent"
        android:drawableLeft="@drawable/profileicon2"/>



</RelativeLayout>

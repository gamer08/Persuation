<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ppm.uqac.com.geekproject.mainmenu.MainActivity"
    android:background="@color/background"
    android:weightSum="1">


    <TextView android:text="test"
        android:id="@+id/TV_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/value"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:gravity="center" />

    <ImageView
        android:layout_width="213dp"
        android:layout_height="100dp"
        android:id="@+id/image"
        android:padding="15dp"
        android:src="@drawable/antigeek"
        android:layout_below="@+id/TV_UserName"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22" />


    <TextView android:text="test"
        android:id="@+id/TV_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/image"
        android:layout_centerHorizontal="true"
        android:textColor="@color/value"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25dp" />
        <!--android:layout_toRightOf="@+id/buttonContent"
        android:layout_toEndOf="@+id/buttonContent"-->


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="ActivitÃ©s"
        android:src="@drawable/icon_ga"
        android:id="@+id/buttonActivities"
        android:layout_centerVertical="true"
        android:onClick="onClickActivities"
        android:layout_alignRight="@+id/buttonContent"
        android:layout_alignEnd="@+id/buttonContent"
        android:layout_alignLeft="@+id/buttonContent"
        android:layout_alignStart="@+id/buttonContent"
        android:drawablePadding="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:padding="5dp" />



    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="Geeklopedie"
        android:id="@+id/buttonContent"
        android:onClick="onClickContent"
        android:src="@drawable/geeklopedieicon5"
        android:layout_below="@+id/buttonActivities"
        android:layout_centerHorizontal="true"
        android:drawablePadding="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_weight="0.1" />


    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="Profil"
        android:id="@+id/buttonProfil"
        android:onClick="onClickProfile"
        android:src="@drawable/profileicone4"
        android:layout_below="@+id/buttonContent"
        android:layout_alignLeft="@+id/buttonContent"
        android:layout_alignStart="@+id/buttonContent"
        android:layout_alignRight="@+id/buttonContent"
        android:layout_alignEnd="@+id/buttonContent"
        android:drawablePadding="5dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_weight="0.1" />



</LinearLayout>

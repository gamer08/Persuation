<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ppm.uqac.com.geekproject.MainActivity">

    <TextView android:text="test"
        android:id="@+id/TV_FirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="test"
        android:id="@+id/TV_LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TV_Type"
        android:layout_alignLeft="@+id/buttonContent"
        android:layout_alignStart="@+id/buttonContent" />

    <TextView android:text="test"
        android:id="@+id/TV_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TV_FirstName"
        android:layout_toRightOf="@+id/buttonContent"
        android:layout_toEndOf="@+id/buttonContent"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="activites"
        android:id="@+id/buttonActivites"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickActivites" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil"
        android:id="@+id/buttonProfil"
        android:onClick="onClickProfil"
        android:layout_below="@+id/buttonActivites"
        android:layout_alignLeft="@+id/buttonActivites"
        android:layout_alignStart="@+id/buttonActivites"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geeklopedie"
        android:id="@+id/buttonContent"
        android:onClick="onClickContent"
        android:layout_above="@+id/buttonActivites"
        android:layout_alignLeft="@+id/buttonActivites"
        android:layout_alignStart="@+id/buttonActivites" />

</RelativeLayout>

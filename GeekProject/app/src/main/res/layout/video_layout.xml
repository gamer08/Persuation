<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <!-- titre video -->
    <TextView  android:id="@+id/TV_NameActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/value">

    </TextView>

    <TextView android:text="Description" android:id="@+id/TV_DescriptionActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/TV_NameActivity"
        android:textColor="@color/value"
        android:layout_marginLeft="112dp"
        android:layout_marginStart="112dp">
    </TextView>

    <ImageView
        android:id="@+id/IM_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_DescriptionActivity"/>


</RelativeLayout>


